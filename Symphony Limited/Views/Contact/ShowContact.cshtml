@model IEnumerable<Contact>
@{
    Layout = "~/Views/shared/_LayoutDashboard.cshtml";
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Show Contact</h4>
                        <p class="card-description">
                            <a asp-controller="Contact" asp-action="AddContact">Add new contact</a>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Contact Id</th>
                                        <th>Branch Name</th>
                                        <th>Address</th>
                                        <th>Phone Number</th>
                                        <th>Created At</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var contact in Model)
                                    {
                                            <tr>
                                                <td>@contact.Contact_Id</td>
                                                <td>@contact.BranchName</td>
                                                <td>@contact.Address</td>
                                                <td>@contact.PhoneNumber</td>
                                                <td>@contact.Created_at</td>
                                                <td>
                                                    <a class="btn btn-outline-primary" asp-controller="Contact" asp-action="EditContact" asp-route-id="@contact.Contact_Id">Edit</a>
                                                    <form class="mt-3" method="post">
                                                        <button class="btn btn-outline-danger" type="submit" asp-controller="Contact" asp-action="DeleteContact" asp-route-id="@contact.Contact_Id">Delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>