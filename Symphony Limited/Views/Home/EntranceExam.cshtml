@model IEnumerable<Examination>
<div class="untree_co-hero overlay" style="background-image: url('images/img-school-1-min.jpg');">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-12">
                <div class="row justify-content-center ">
                    <div class="col-lg-6 text-center ">
                        <h1 class="mb-4 heading text-white" data-aos="fade-up" data-aos-delay="100">Entrance Exam</h1>
                        <div class="mb-5 text-white desc mx-auto" data-aos="fade-up" data-aos-delay="200">
                        </div>



                    </div>


                </div>

            </div>

        </div> <!-- /.row -->
    </div> <!-- /.container -->

</div> <!-- /.untree_co-hero -->

<div class="untree_co-section">
    <div class="container">
        <div class="row">
            @foreach (var examination in Model)
            {
                <div class="col-12 col-sm-6 col-md-6 col-lg-4 mb-4 mb-lg-0">
                    <div class="custom-media">

                        <div class="custom-media-body">
                            <h3 class="text-primary">Exam Name: @examination.ExamName</h3>
                            <div > <span>Date: @examination.ExamDate</span></div>
                            <div class="border-top d-flex justify-content-between pt-3 mt-3 align-items-center">
								<div><h5>Fees: @examination.Fees</h5></div>
                            </div>
                        </div>
                    </div>
                            </div>
            }
            </div>
            </div>
            </div>
            
