@model Symphony_Limited.ViewModels.RegisterViewModel;
<div class="untree_co-hero inner-page overlay" style="background-image: url('images/img-school-5-min.jpg');">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-12">
                <div class="row justify-content-center ">
                    <div class="col-lg-6 text-center ">
                        <h1 class="mb-4 heading text-white" data-aos="fade-up" data-aos-delay="100">Register</h1>

                    </div>
                </div>
            </div>
        </div> <!-- /.row -->
    </div> <!-- /.container -->

</div> <!-- /.untree_co-hero -->




<div class="untree_co-section">
    <div class="container">

        <div class="col-mb-5 justify-content-center">
			<div class="col-lg-5 mx-auto order-1" data-aos="fade-up" data-aos-delay="200">
				<form asp-action="Register" method="post">
					<div class="row">
               
                        <div asp-validation-summary="All" class="text-danger"></div>
                    

						<div class="col-12 mb-3">
							<label>Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Email">
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div class="col-12 mb-3">
                            <label>Password</label>
                            <input asp-for="Password" class="form-control" placeholder="Password">
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="col-12 mb-3">
                            <label>Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Re-type Password">
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <div class ="col-12 mb-3">
                            <label>Select Role</label>
                            <select asp-for="Role" class="form-control">
                                <option value="Admin">Admin</option>
                                <option value="Student">Student</option>
                                <option value="Faculty">Faculty</option>
                            </select>
                        </div>
                   

                        <div class="col-12 mb-3">
                            <label class="control control--checkbox">
                                <span class="caption">Accept our <a href="#">terms and conditions</a></span>
                                <input type="checkbox" checked="checked" />
                                <div class="control__indicator"></div>
                            </label>
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
					</div>
				</form>
            </div>
        </div>


    </div>
</div> <!-- /.untree_co-section -->
