@model IEnumerable<About>
@{
    Layout = "~/Views/shared/_LayoutDashboard.cshtml";
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Show Content</h4>
                        <p class="card-description">
                            <a asp-controller="About" asp-action="AddContent">Add new content</a>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>About Id</th>
                                        <th>Content</th>
                                        <th>Created At</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var about in Model)
                                    {
                                        <tr>
                                            <td>@about.About_Id</td>
                                            <td>@about.Content</td>
                                            <td>@about.Created_At</td>
                                            <td>
                                                <a class="btn btn-outline-primary" asp-controller="About" asp-action="EditAbout" asp-route-id="@about.About_Id">Edit</a>
                                                <form class="mt-3" method="post">
                                                    <button class="btn btn-outline-danger" type="submit" asp-controller="About" asp-action="DeleteAbout" asp-route-id="@about.About_Id">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>