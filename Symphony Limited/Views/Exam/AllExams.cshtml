@model IEnumerable<Examination>
@{
    Layout = "~/Views/shared/_LayoutDashboard.cshtml";
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">All Exams</h4>
                        <p class="card-description">
                            <a asp-controller="Exam" asp-action="AddExam">Add new exam</a>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Exam Id</th>
                                        <th>Exam Name</th>
                                        <th>Exam Date</th>
                                        <th>Exam Fees</th>
                                        <th>Created At</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                    @foreach (var examination in Model)
                                        {
                                            <tr>

                                            <td>@examination.ExamId</td>
                                            <td>@examination.ExamName</td>
                                            <td>@examination.ExamDate</td>
                                            <td>@examination.Fees</td>
                                            <td>@examination.Created_at</td>
                                            <td>
                                                <a class="btn btn-outline-primary" asp-controller="Exam" asp-action="EditExam" asp-route-id="@examination.ExamId">Edit</a>
                                                <form class="mt-3" method="post">
                                                    <button class="btn btn-outline-danger" type="submit" asp-controller="Exam" asp-action="DeleteExam" asp-route-id="@examination.ExamId">Delete</button>
                                                </form>
                                            </td>
										</tr>
                                        }
                                    
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>